@model CentumApps.Domain.Entities.Content

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Create New Content</h1>
<p class="mb-4">
    Content Board untuk menampilkan visualisasi data harian operasional / non operasional di lapangan.
</p>

<div class="row">

    <!-- Area Chart -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Create New Content</h6>
                
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <form method="post" class="row" enctype="multipart/form-data">
                @*  <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="ContentTitle" class="form-control border" />
                    <label asp-for="ContentTitle" class="ms-2"></label>
                    <span asp-validation-for="ContentTitle" class="text-danger"></span>
                </div>
                @* <div class="form-floating py-2 col-12">
                    <input asp-for="ContentCategory" class="form-control border" />
                    <label asp-for="ContentCategory" class="ms-2"></label>
                    <span asp-validation-for="ContentCategory" class="text-danger"></span>
                </div> *@
                    <div class="form-floating py-2 col-12">
                        <select asp-for="ContentCategory" class="form-select border">
                            <option>Operasional</option>
                            <option>Non Operasional</option>
                            <option>Kegiatan Internal</option>
                            <option>Informasi</option>
                        </select>
                        <label asp-for="ContentCategory" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ContentDescription" class="form-control border" />
                        <label asp-for="ContentDescription" class="ms-2"></label>
                        <span asp-validation-for="ContentDescription" class="text-danger"></span>
                    </div>
                <div class="mb-3">
                        <input asp-for="ImageUrl" hidden class="form-control border form-control" />
                        <input asp-for="Image" class="form-control border form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100 btn-sm">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Content" asp-action="Index" class="btn btn-secondary w-100 btn-sm">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>

